<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../elements/header.ejs %>
</head>

<body>
    <header class="item header margin-top-0">
		<div class="wrapper">
            <% include ../elements/navbar.ejs %>
			<div class="container">
				<div class="row">
					<div class="col-md-12 text-center">
						<div class="text-pageheader">
							<div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.0s">
								Thông tin cá nhân
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	<!-- CONTENT =============================-->
	<section class="item content">
		<div class="container toparea">
			<div class="underlined-title">
				<div class="editContent">
					<h1 class="text-center latestitems">Thiết lập thông tin cá nhân</h1>
				</div>
				<div class="wow-hr type_short">
					<span class="wow-hr-h">
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
					</span>
				</div>
			</div>
			
			</form>
			<div id="edd_account_form_wrap " class="col-md-8 col-md-offset-2">
				<form id="edd_account_form" class="edd_form" action="#" method="POST">
					<fieldset id="edd_checkout_user_info">
						<legend>Personal Info</legend>
						<div class="edd_account_form_info">
							<p id="edd-first-name-wrap">
								<label class="edd-label" for="edd-first">
									<%= result.firstname%> <span class="edd-required-indicator">: </span>
								</label>
								<input class="edd-input required" type="text" name="edd_first" placeholder="Full name" id="edd-first" value="" required="">
							</p>
						</div>
						<div class="edd_checkout_user_more">
							<p id="edd-email-wrap">
								<label class="edd-label" for="edd-email">
									<%= result.email%> <span class="edd-required-indicator">*</span></label>
								<input class="edd-input required" type="email" name="edd_email"
									placeholder="Email address" id="edd-email" value="">
							</p>
						</div>
						<div class="edd_checkout_user_more">
							<p id="edd-email-wrap">
								<label class="edd-label" for="edd-email">
									<%= result.address%> <span class="edd-required-indicator">*</span></label>
								<input class="edd-input required" type="address" name="edd_address"
									placeholder="Your address" id="edd-email" value="">
							</p>
						</div>
					</fieldset>
					<fieldset id="edd_change_user_password">
						<legend>Change Passwords</legend>
						<div class="edd_password_form_info">
							<p id="edd-current-password-wrap">
								<label class="edd-label" for="edd-first">
									Current Password <span class="edd-required-indicator">: </span>
								</label>
								<input class="edd-input required" type="passwordq" name="edd_first" placeholder="Current Password" id="edd-first" value="" required="">
							</p>
							<p id="edd-new-password-wrap">
								<label class="edd-label" for="edd-last">
									New Password <span class="edd-required-indicator">: </span></label>
								<input class="edd-input" type="password" name="edd_last" id="edd-last"
									placeholder="New Password" value="">
							</p>
						</div>
					</fieldset>
					<fieldset id="edd_confirm_submit">
						<input type="submit" class="edd-submit button" id="edd-confirm-button" name="edd-confirm"
							value="Confirm">
					</fieldset>
				</form>
			</div>
	</section>

	<!-- CALL TO ACTION =============================-->
	<section class="content-block" style="background-color:#00bba7;">
		<div class="container text-center">
			<div class="row">
				<div class="col-sm-10 col-sm-offset-1">
					<div class="item" data-scrollreveal="enter top over 0.4s after 0.1s">
						<h1 class="callactiontitle"> Promote Items Area Give Discount to Buyers <span
								class="callactionbutton"><i class="fa fa-gift"></i> WOW24TH</span>
						</h1>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- FOOTER =============================-->
	<% include ../elements/footer.ejs %>

	<!-- SCRIPTS =============================-->
	<% include ../elements/js/scripts.ejs %>
    
</body>

</html>