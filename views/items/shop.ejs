<!DOCTYPE html>
<html>

<head>
	<% include ../elements/header.ejs %>
</head>

<body>

	<!-- HEADER =============================-->
	<header class="item header margin-top-0">
		<div class="wrapper">
			<% include ../elements/navbar.ejs %>
				<div class="container">
					<div class="row">
						<div class="col-md-12 text-center">
							<div class="text-pageheader">
								<div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
									Danh mục
								</div>
							</div>
						</div>
					</div>
				</div>
		</div>
	</header>

	<!-- CONTENT =============================-->
	<section class="item content">
		<div class="container toparea">
			<div class="underlined-title">
				<div class="editContent">
					<h1 class="text-center latestitems">SẢN PHẨM CỦA CHÚNG TÔI</h1>
				</div>
				<div class="wow-hr type_short">
					<span class="wow-hr-h">
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
					</span>
				</div>
			</div>
			<div class="row">
				<%
				if(result.length!=0){
        			result.forEach(function(data){
    			%>
				<div class="col-md-4">
					<div class="productbox">
						<div class="fadeshop">
							<div class="captionshop text-center" style="display: none;">
								<h3><%= data.name %></h3>
								<p>
									Nằm ở top của trang web
								</p>
								<p>
									<a href="#" class="learn-more detailslearn"><i class="fa fa-shopping-cart"></i> Đấu
										giá</a>
									<a href="#" class="learn-more detailslearn"><i class="fa fa-link"></i> Chi tiết</a>
								</p>
							</div>
							<span class="maxproduct"><img src="images/product1-1.jpg" alt=""></span>
						</div>
						<div class="product-details">
							<a href="#">
								<h1><%= data.name %></h1>
							</a>
							<span class="price">
								<span class="edd_price">Đang diễn ra</span>
							</span>
						</div>
					</div>
				</div>
				<% }) %>
    			<% } %>
				<!-- /.productbox -->				
			</div>
		</div>
	</section>

	<!-- CALL TO ACTION =============================-->
	<section class="content-block" style="background-color:#00bba7;">
		<div class="container text-center">
			<div class="row">
				<div class="col-sm-10 col-sm-offset-1">
					<div class="item" data-scrollreveal="enter top over 0.4s after 0.1s">
						<h1 class="callactiontitle"> Promote Items Area Give Discount to Buyers <span
								class="callactionbutton"><i class="fa fa-gift"></i> WOW24TH</span>
						</h1>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- FOOTER =============================-->
	<% include ../elements/footer.ejs %>

	<!-- Load JS here for greater good =============================-->
	<% include ../elements/js/scripts.ejs %>
	<script>
		//----HOVER CAPTION---//	  
		jQuery(document).ready(function ($) {
			$('.fadeshop').hover(
				function () {
					$(this).find('.captionshop').fadeIn(150);
				},
				function () {
					$(this).find('.captionshop').fadeOut(150);
				}
			);
		});
	</script>
</body>

</html>